

<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-12 text-center">
    <h3>Empresa: <strong><%= @company.name %></strong></h3>
      <hr>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <p>Total Reclamos: <%= @company.comments.count %></p>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-6">
    <%= form_for([@company, @comment], remote: true) do |f| %>

      <div class="form-group">
        <%= f.label :content, 'Ingresa un Comentario' %>
        <%= f.text_area :content, class: 'form-control' %>
        <br>
        <%= f.submit class: 'btn btn-success btn-sm' %>
      </div>

    <% end %>
    <br>
    <%= form_tag(company_path, method: :get) do %>
       <div class="input-group">
           <%= text_field_tag :search_comment, nil, placeholder: 'Ej: Reclamo de Carlos', class: "form-control" %>
           <span class="input-group-btn">
               <%= button_tag(type: "submit", class: "btn btn-success btn-md") do %>
                   <span class="glyphicon glyphicon-search"></span>
               <% end %>
           </span>
       </div>
       <% end %>
  </div>
  <div class="col-md-6">
    <p>Reclamos</p>
    <ul id="comments">
        <%= render @comments %>
    </ul>
  </div>
</div>
<br>
<%= link_to 'Back', companies_path %>
