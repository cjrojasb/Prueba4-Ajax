<h1 class="text-center">Companies</h1>
<div class="row">
  <div class="col-md-4">
    <%= render 'form', company: @company %>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <%= render company %>
    <% end %>
  </tbody>
</table>

<br>

